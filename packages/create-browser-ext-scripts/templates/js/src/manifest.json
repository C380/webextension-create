{
  "manifest_version": 2,
  "name": "My Browser Extension",
  "version": "0.0.0",

  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },

  "browser_action": {
    "default_title": "My Browser Extension",
    "default_icon": "icon.png",
    "default_popup": "pages/popup.html"
  },

  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },

  "background": {
    "scripts": ["pages/background.js"],
    "persistent": false
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content_scripts/index.js"]
    }
  ],

  "permissions": ["<all_urls>"]
}
